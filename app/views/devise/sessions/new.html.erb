<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
      .fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeIn 0.8s ease-out forwards;
      }

      .delay-1 {
        animation-delay: 0.9s;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
</head>


<!-- Outer Container -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 via-blue-200 to-indigo-100 px-4 fade-in delay-1">
  
  <!-- Two Column Layout -->
  <div class="flex w-full max-w-5xl bg-white shadow-lg rounded-2xl overflow-hidden">
    
    <!-- Left Graphic Column -->
    <div class="hidden md:flex flex-col w-1/2 bg-blue-800 p-8">
      
      <!-- Logo at Top Left -->
      <div class="mb-8 fade-in delay-1">
        <%= image_tag "tradenova-logo-white.svg", alt: "TradeNova Logo", class: "w-32 h-auto" %>
      </div>
      
      <!-- Graphic Centered in Remaining Space -->
      <div class="flex-grow flex items-center justify-center fade-in delay-1">
        <%= image_tag "login-graphic.svg", alt: "Stock Graphic", class: "w-3/4 h-auto" %>
      </div>
    </div>

    <!-- Right Login Form Column -->
    <div class="w-full md:w-1/2 p-8 fade-in delay-1">
      <h2 class="text-3xl font-bold text-center text-blue-900 mb-8">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6 mb-4">

          <!-- Email -->
          <div class="space-y-2">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-[#111111]" %>
          </div>

          <!-- Password -->
          <div class="space-y-2">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-[#111111]" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center space-x-2">
              <%= f.check_box :remember_me, class: "rounded border-gray-300 text-[#111111] focus:ring-[#111111]" %>
              <%= f.label :remember_me, class: "text-sm text-gray-700" %>
            </div>
          <% end %>

          <!-- Submit -->
          <div>
            <%= f.submit "Log in", class: "w-full rounded-lg bg-blue-900 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-[#111111] focus:ring-offset-2 transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="text-center text-sm text-gray-600">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
